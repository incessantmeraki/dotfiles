{
    "editor.formatOnSave": true,
    "window.zoomLevel": 2,
    //Vim Plugins settings
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    // make control + something in vscode work
    "vim.useCtrlKeys": true,
    "vim.handleKeys": {
        "<C-b>": false,
        "<C-j>": false,
        "<C-f>": false,
        "<C-k>": false
    },
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.surround": true,
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "L"
            ],
            "after": [
                "$"
            ]
        },
        {
            "before": [
                "H"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "leader",
                "w"
            ],
            "commands": [
                "workbench.action.files.save",
            ]
        }
    ],
    "workbench.colorTheme": "Atelier_DuneDark"
}
